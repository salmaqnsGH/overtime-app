<div class="logo">
    <h1>Time Tracker</h1>
</div>
<% if current_user %>
    <ul class="custom-nav nav nav-tabs">
        <li class="nav-item">
            <%= link_to "Home", root_path, class: "nav-link #{active?(root_path)}" %>
        </li>
        <li class="nav-item">
            <%= link_to "Time Entries", posts_path, class: "nav-link #{active?(posts_path)}" %>
        </li>
        <li class="nav-item">
            <%= link_to "New Entry", new_post_path, id: 'new_post_from_nav', class: "nav-link #{active?(new_post_path)}" %>
        </li>
        <% if current_user.try(:type) == 'AdminUser' %>
            <li>
                <%= link_to "Admin Dashboard", admin_root_path, class: "nav-link" %>
            </li>
        <% end %>
        <li><%= button_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link text-danger" %></li>
    </ul>
<% end %>