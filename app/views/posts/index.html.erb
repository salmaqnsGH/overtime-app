<h1>Posts</h1>

<table class="table">
    <thead>
        <tr>
        <th scope="col">#</th>
        <th scope="col">Date</th>
        <th scope="col">Rationale</th>
        <th scope="col">User ID</th>
        </tr>
    </thead>
    <tbody>
        <% @posts.each do |post| %>
            <tr>
                <th scope="row"><%= post.id %></th>
                <td><%= post.date %></td>
                <td><%= truncate(post.rationale) %></td>
                <td>@<%= post.user_id %></td>
            </tr>
        <% end %>
    </tbody>
</table>