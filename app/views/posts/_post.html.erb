<% flash.each do |name, message| %>
<div class="alert alert-<%= name %> alert-dismissible fade show" role="alert">
    <strong><%= name.upcase %>!</strong>
    <%= message %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>  
<% end %>

<% @posts.each do |post| %>
    <tr>
        <th scope="row"><%= post.id %></th>
        <td><%= post.date %></td>
        <td><%= post.user.full_name %></td>
        <td><%= truncate(post.rationale) %></td>
        <td>@<%= post.user_id %></td>
        <td>
            <%= link_to 'Edit', edit_post_path(post), id: "edit-#{post.id}" %>
            <%= button_to "Delete", post, method: :delete,  id: "delete_post_#{post.id}_from_index", class:"btn btn-sm btn-danger"  %>
        </td>
    </tr>
<% end %>